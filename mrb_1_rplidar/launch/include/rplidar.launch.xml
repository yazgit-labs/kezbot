<launch>

  <arg name="robot_name" default="mrb_1" />
  <param name="robot_name" value="$(arg robot_name)" />` 

  <node name="rplidar"
      pkg="mrb_1_rplidar"
      type="mrb_1_rplidar_node"
      args="$(arg robot_name)"
      output="screen"
      respawn="true"
      >

      <param name="serial_port"       type="string"   value="/dev/mrb_1_rplidar" />
      <param name="serial_baudrate"   type="int"      value="115200" />
      <param name="frame_id"          type="string"   value="$(arg robot_name)/base_scan" />
      <param name="inverted"          type="bool"     value="false" />
      <param name="angle_compensate"  type="bool"     value="true" />

  </node>

  <node pkg="tf" type="static_transform_publisher"
      name="laser_tf_broadcaster"
      args="0 0 0.15 0 0 0 1 $(arg robot_name)/base_link $(arg robot_name)/base_scan 100" />

</launch>
