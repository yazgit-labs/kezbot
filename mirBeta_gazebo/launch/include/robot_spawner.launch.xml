<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot_name" default="mirBeta"/>

  <param name="robot_description" 
    command="$(find xacro)/xacro --inorder '$(find mirBeta_description)/urdf/mirBeta.xacro'"/>
  <node name="mirBeta_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
    args="-urdf -param robot_description -model mirBeta">
  </node>

  <node pkg="robot_state_publisher"
    type="robot_state_publisher"
    name="robot_state_publisher"
    >
    <param name="publish_frequency" type="double" value="30.0" />
  </node>

</launch>
